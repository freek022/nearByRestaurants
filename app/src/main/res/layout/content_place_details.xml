<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_place_details"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PlaceDetailsActivity"
    tools:showIn="@layout/activity_place_details">

    <TextView
        android:id="@+id/place_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@id/name_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_id"
        android:textColor="@color/colorNamePlace"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_place"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"/>

    <TextView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"/>

    <TextView
        android:id="@+id/attr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/web"/>
</RelativeLayout>